<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/widgets_view_section_text_color">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/e2e2e2"
            android:paddingBottom="8dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="8dp">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/lefty_search_yahoo"
                android:gravity="center"
                android:padding="2dp"
                >

                <EditText
                    android:id="@+id/search_yahoo_edt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:hint="@string/search"
                    android:imeOptions="actionSearch"
                    android:inputType="textPersonName"
                    android:maxLines="1"
                    android:minHeight="30dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="50dp"
                    android:textColorHighlight="@color/six_nine"
                    android:textColorHint="@color/b_e"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/search_icon"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/search" />
            </RelativeLayout>


        </RelativeLayout>

        <include
            android:id="@+id/video_header"
            layout="@layout/lefty_category_header" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <lefty.custompager.AutoScrollViewPager
                android:id="@+id/matches_viewpager"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:touchscreenBlocksFocus="true" />

            <lefty.com.viewpagerindicator.CirclePageIndicator
                android:id="@+id/ferries_detail_indicator"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:padding="10dip" />
        </FrameLayout>


        <!--</HorizontalScrollView>-->

        <LinearLayout
            android:id="@+id/viewpageclickcontainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp"
            android:visibility="gone"></LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/lefty_shade_drawable" />

        <RelativeLayout
            android:id="@+id/weather_container"
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <include layout="@layout/lefty_weather_layout" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:id="@+id/setting_header"
                layout="@layout/lefty_category_header" />

            <RelativeLayout
                android:id="@+id/small_setting_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="19.5dp"
                    android:background="@drawable/setting" />
            </RelativeLayout>


        </RelativeLayout>



        <LinearLayout
            android:id="@+id/settings_layout"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/e_d"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:id="@+id/settingImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/settinglanguageLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/selectlanguagetxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="@string/select_language_s"
                    android:textColor="@color/six_three"
                    android:textSize="18sp" />

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/selectlanguagetxt"
                    android:background="@color/six_c" />

                <RelativeLayout
                    android:id="@+id/linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/lefty_select_language_bg">

                    <TextView
                        android:id="@+id/language_select"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:hint="@string/choose_your_preferred_language_s"
                        android:padding="8dp"
                        android:textColor="@color/six_three"
                        android:textColorHint="@color/six_three"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/lefty_drop_down" />
                </RelativeLayout>

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/linear"
                    android:background="@color/six_three" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/view2">

                    <TextView
                        android:id="@+id/next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/lefty_next_bg_inactive"
                        android:paddingBottom="8dp"
                        android:paddingLeft="25dp"
                        android:paddingRight="25dp"
                        android:paddingTop="8dp"
                        android:text="@string/next"
                        android:textColor="@android:color/white"
                        android:textSize="16sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="10dp"
                    android:background="@color/six_c" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/settingpublisherlayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/selectpublishertx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="@string/select_publisher_s"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/selectpublishertx"
                    android:background="@color/six_c" />

                <RelativeLayout
                    android:id="@+id/linear1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view1"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/lefty_select_language_bg">

                    <TextView
                        android:id="@+id/select_publisher_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:hint="@string/choose_your_preferred_publisher_s"
                        android:maxLines="1"
                        android:padding="8dp"
                        android:textColor="@color/six_three"
                        android:textColorHint="@color/six_three"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"

                        android:layout_marginRight="8dp"
                        android:src="@drawable/lefty_drop_down" />
                </RelativeLayout>

                <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/linear1"
                    android:background="@color/six_c" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/view3"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/previouscc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_toLeftOf="@+id/proceed"
                        android:background="@drawable/lefty_next_bg_active"
                        android:paddingBottom="8dp"
                        android:paddingLeft="25dp"
                        android:paddingRight="25dp"
                        android:paddingTop="8dp"
                        android:text="@string/previous"
                        android:textColor="@android:color/white"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/proceed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/lefty_next_bg_inactive"
                        android:paddingBottom="8dp"
                        android:paddingLeft="25dp"
                        android:paddingRight="25dp"
                        android:paddingTop="8dp"
                        android:text="@string/proceed"
                        android:textColor="@android:color/white"
                        android:textSize="16sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="10dp"
                    android:background="@color/six_c" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/toi_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <lefty.custompager.AutoScrollViewPager
                android:id="@+id/banner2_viewpager"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                 />

            <lefty.com.viewpagerindicator.CirclePageIndicator
                android:id="@+id/banner2_indicator"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:padding="10dip" />
        </FrameLayout>


        <include
            android:id="@+id/twitter_header"
            layout="@layout/lefty_category_header" />

        <LinearLayout
            android:id="@+id/twiterlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/e_d"
            android:orientation="vertical"
            android:paddingBottom="8dp">


        </LinearLayout>

        <include
            android:id="@+id/treading_apps_header"
            layout="@layout/lefty_category_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <HorizontalScrollView
            android:id="@+id/treading_app_hori_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/e_d"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="15dp"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/treading_apps_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"></LinearLayout>

        </HorizontalScrollView>

        <include
            android:id="@+id/treading_games_header"
            layout="@layout/lefty_category_header" />

        <HorizontalScrollView
            android:id="@+id/treading_games_hori_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/e_d"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="15dp"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/treading_games_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"></LinearLayout>

        </HorizontalScrollView>

        <include
            android:id="@+id/entertainment_header"
            layout="@layout/lefty_category_header" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <lefty.custompager.AutoScrollViewPager
                android:id="@+id/entertainment_viewpager"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <lefty.com.viewpagerindicator.CirclePageIndicator
                android:id="@+id/entertainment_indicator"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:padding="10dip" />

        </FrameLayout>


        <LinearLayout
            android:id="@+id/entertainment_indicator_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="1dp"></LinearLayout>

        <include
            android:id="@+id/twitter_trending_news"
            layout="@layout/lefty_category_header" />

        <LinearLayout
            android:id="@+id/twiter_trending_news_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/e_d"
            android:orientation="vertical"
            android:paddingBottom="1dp">


        </LinearLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <lefty.custompager.AutoScrollViewPager
                android:id="@+id/banner1_viewpager"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                 />

            <lefty.com.viewpagerindicator.CirclePageIndicator
                android:id="@+id/banner1_indicator"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:padding="10dip" />
        </FrameLayout>


        <include
            android:id="@+id/wallpapers_header"
            layout="@layout/lefty_category_header" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:background="@color/e_d"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="15dp" />
    </LinearLayout>

</ScrollView>
